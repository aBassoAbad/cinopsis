<%= render "shared/titulo_pagina", titulo: "Listas" %>
<%= link_to "Crear lista", new_list_path(), class: "btn btn-xs btn-primary" %>
<div class="center list-group">
  <% @listas.each do |lista| %>
    <ul class="list-group-item listing">
      <div class="row">
        <%=lista.nombre_lista.capitalize %>
          <div>
            <%= button_to "Borrar lista", list_path(lista), method: :delete, class: "btn btn-xs btn-danger" %>
          </div>
      </div>
    </ul>      
  <% end %>
</div>