<%= render "shared/titulo_pagina", titulo: t(:peliculas) %>
<% lista = @pelicula["results"]%>
<% populares = @peliculas["results"]%>
<div>
  <div class="container my-5">
    <div id="carousel1" class="carousel carousel-dark slide" data-interval="false">
      <div class="carousel-inner">

        <!--Primer item del slider-->
        <div class="carousel-item active">
          <div class="row">
            <% primeras = lista.first(6)%>
            <% primeras.each do |pelicula| %>
              <%lista.shift
              response = RestClient.get('https://pokeapi.co/api/v2/pokemon/'+pelicula["name"])
              @sprite = JSON.parse(response)["sprites"]["front_shiny"]
                %>
              <div class="col-md-2">
                <div class="card mb-2">
                  <%= link_to pelicula_path(pelicula["name"]) do %>
                    <% params[:parametro] = pelicula["name"]%>
                    <%= image_tag url_for(@sprite), class: "card-img-top" %>
                  <% end %>
                  <div class="card-body">
                    <h6 class="card-title"><%= pelicula["name"]%></h6>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        
        <!--Fin primer item del slider-->

        <!--Resto de items del slider-->
        <% while lista.length() > 0%>
          <div class="carousel-item">
            <div class="row">
              <% primeras = lista.first(6)%>
              <% primeras.each do |pelicula| 
                lista.shift
                response = RestClient.get('https://pokeapi.co/api/v2/pokemon/'+pelicula["name"])
                @sprite = JSON.parse(response)["sprites"]["front_shiny"]
                %>
                <div class="col-md-2">
                  <div class="card mb-2">
                    <%= link_to pelicula_path(1) do %>
                    <%= image_tag url_for(@sprite), class: "card-img-top" %>
                    <% end %>
                    <div class="card-body">
                      <h6 class="card-title"><%= pelicula["name"]%></h6>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
        <!--Fin de los items-->

      </div>
      <!--Controles del slider-->
      <button class="carousel-control-prev" type="button" data-bs-target="#carousel1" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carousel1" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </div>
  
</div>
