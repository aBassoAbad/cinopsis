<%= render "shared/titulo_pagina", titulo: t(:crear_admin) %>
<div class="row">
  <div class="col-md-12">
    <%= form_for(@usuario, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :nombre, t(:nombre) %>
        </div>
        <div class="col-md-12">
          <%= f.text_field :nombre, class: "form-control", placeholder: t(:introduce_nombre), autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :email %>
        </div>
        <div class="col-md-12">
          <%= f.text_field :email, class: "form-control", placeholder: t(:introduce_email) %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :password, t(:password) %>
        </div>
        <div class="col-md-12">
          <%= f.password_field :password, class: "form-control", placeholder: t(:introduce_contrasena) %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-4">
          <%= f.label :password_confirmation, t(:confirma_contrasena) %>
        </div>
        <div class="col-md-12">
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: t(:introduce_contrasena) %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-4">
          <%= f.label :admin, "Admin" %>
          <%= f.check_box :admin, placeholder: "Admin" %>
        </div>
      </div>
      <div class="form-group center">
          <%= f.submit(t(:crear_admin), class: "btn btn-primary btn-lg btn-xlarge") %>
      </div>
    <% end %>
  </div>
</div>