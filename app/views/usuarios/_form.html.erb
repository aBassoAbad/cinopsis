
<div class="row">
  <div class="col-md-12">
    <%= form_for(@usuario, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :nombre, "Nombre" %>
        </div>
        <div class="col-md-12">
          <%= f.text_field :nombre, class: "form-control", placeholder: "Introduce tu nombre", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :email %>
        </div>
        <div class="col-md-12">
          <%= f.text_field :email, class: "form-control", placeholder: "Introduce tu email" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :password %>
        </div>
        <div class="col-md-12">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-4">
          <%= f.label :password_confirmation, "Confirm password" %>
        </div>
        <div class="col-md-12">
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Enter your password again" %>
        </div>
      </div>
      <div class="form-group center">
          <%= f.submit("Create my account", class: "btn btn-primary btn-lg btn-xlarge") %>
      </div>
    <% end %>
  </div>
</div>