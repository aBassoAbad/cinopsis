<%= render "shared/titulo_pagina", titulo: t(:iniciar_sesion) %>
<div class="row">
  <div class="col-md-12">
    <%= form_for(:sessions, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :email %>
        </div>
        <div class="col-md-12">
          <%= f.text_field :email, class: "form-control", placeholder: t(:introduce_email) %>
        </div>
      </div>
      <div class="form-group mt-3">
        <div class="control-label col-md-2">
          <%= f.label :password %>
        </div>
        <div class="col-md-12">
          <%= f.password_field :password, class: "form-control", placeholder: t(:introduce_contrasena) %>
        </div>
      </div>
      <div class="form-group center mt-4">
          <%= f.submit(t(:iniciar_sesion), class: "btn btn-primary btn-lg btn-xlarge") %>
      </div>
    <% end %>
  </div>
</div>