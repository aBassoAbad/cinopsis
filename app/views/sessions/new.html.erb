
<div class="row">
  <div class="col-md-12">
    <%= form_for(:sessions, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :email %>
        </div>
        <div class="col-md-12">
          <%= f.text_field :email, class: "form-control", placeholder: "Introduce tu email" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :password %>
        </div>
        <div class="col-md-12">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
        </div>
      </div>
      <div class="form-group center">
          <%= f.submit("Create my account", class: "btn btn-primary btn-lg btn-xlarge") %>
      </div>
    <% end %>
  </div>
</div>